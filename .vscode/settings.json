{
    "files.exclude": {
        "src/proto_0**": true
    },
    "search.exclude": {
        "src/proto_0**": true
    },
    "git.autofetch": true,
    "cSpell.words": [
        "Tezos"
    ],
    "editor.fontFamily": "'Fira Code', 'Courier New', monospace",
    "editor.fontLigatures": true,
    "ocaml.repl.path": "dune",
    "ocaml.repl.args": [
        "utop"
    ],
    "restructuredtext.confPath": "${workspaceFolder}/docs",
    "ocaml.sandbox": {
        "kind": "custom",
        "template": "nix-shell --arg editor-mode true --run '$prog $args'"
    },
    "nixEnvSelector.nixFile": "${workspaceRoot}/shell.nix"
}